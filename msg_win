Add-Type -AssemblyName PresentationFramework
Add-Type -AssemblyName PresentationCore
Add-Type -AssemblyName System.Windows.Forms

$messageBoxText = "Ваше сообщение здесь"
$messageBoxTitle = "Заголовок окна"
$buttons = "OK"
$icon = "Information"

$result = [System.Windows.MessageBox]::Show($messageBoxText, $messageBoxTitle, $buttons, $icon)
